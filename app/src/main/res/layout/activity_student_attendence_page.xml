<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Attendence_page"
    android:background="#212121"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/student_details_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Attendence"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#85c3cf"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="111dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#cbe6eb"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="60%"
            android:textSize="15sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dbms"
            android:layout_margin="10dp"
            android:id="@+id/DBMS"
            android:clickable="true"
             />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="111dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#cbe6eb"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="70%"
            android:textSize="15sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/oops"
            android:layout_margin="10dp"
            android:id="@+id/OOPS"
            android:clickable="true"
            />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="111dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#cbe6eb"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="80%"
            android:textSize="15sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/flat"
            android:layout_margin="10dp"
            android:id="@+id/flat"
            android:clickable="true"
            />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="111dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#cbe6eb"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="74%"
            android:textSize="15sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/se"
            android:layout_margin="10dp"
            android:id="@+id/se"
            android:clickable="true"
            />


    </androidx.cardview.widget.CardView>




</LinearLayout>